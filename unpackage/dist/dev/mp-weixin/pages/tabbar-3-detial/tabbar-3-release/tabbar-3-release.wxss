
.content {
	display: flex;
	align-items: center;
	justify-content: center;
	width: 100%;




	height: 100vh;

	background-color: transparent;
}
.line-box {
	display: flex;
	flex-direction: row;
	align-items: center;
	justify-content: right;
	width: 100%;
	height: 60rpx;
	font-size: 28rpx;
}
.line-box-item {
	float: right;
	height: 40rpx;
	padding-top: 10rpx;
	background-color: red;
}
.work-area {
	display: flex;
	flex-direction: column;
	width: 100%;
	height: 100%;
	background-color: white;
	border-radius: 4rpx;
}


