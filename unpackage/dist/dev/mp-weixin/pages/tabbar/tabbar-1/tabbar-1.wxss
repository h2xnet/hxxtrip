.right {
  position: absolute;
  right: 0rpx;
  padding-right: 30rpx;
}
.green-color {
  color: seagreen;
}
.gray-color {
  color: gray;
}
.line-box {
  padding-top: 10rpx;
  padding-bottom: 10rpx;
  padding-left: 15rpx;
  padding-right: 15rpx;
  height: 60rpx;
  width: 100%;
  display: inline-block;
}
.line-box-item {
  margin: 0;
  float: left;
}
.label-text {
  font-size: 32rpx;
  padding-left: 15rpx;
  padding-right: 15rpx;
}
.font-size-max {
  font-size: 32rpx;
}
.font-size-mid {
  font-size: 30rpx;
}
.font-size-min {
  font-size: 26rpx;
}
.color-white {
  color: white;
}
.text-align-left {
  text-align: left;
}
.text-icon-space-min {
  padding-left: 15rpx;
}
.line-button {
  border-radius: 10rpx;
  background-color: transparent;
  color: white;
  font-size: 30rpx;
}
.space-gray-line {
  width: 90%;
  height: 1rpx;
  background-color: #d9d9d9;
}
.margin-left-min {
  margin-left: 15rpx;
}
.margin-left-mid {
  margin-left: 20rpx;
}
.margin-left-max {
  margin-left: 30rpx;
}
.text-align-center {
  text-align: center;
}
.fixed-bottom {
  width: 100%;
  bottom: 0rpx;
  position: fixed;
  padding-left: 0rpx;
  padding-right: 0rpx;
  padding-bottom: 30rpx;
  background-color: #ffffff;
  -webkit-transform: translateZ(0);
          transform: translateZ(0);
  bottom: env(safe-area-inset-bottom);
  box-shadow: 0rpx -5rpx 14rpx #e3e6e6;
  bottom: contant(safe-area-inset-bottom);
}
.center-wrap {
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.center-container-wrap {
  min-height: 40rpx;
  width: 100%;
  background-color: #ffffff;
}
.content {
  text-align: center;
  height: 400rpx;
  margin-top: 0;
}
.tabs {
  height: 35px;
}
.tabs .active {
  color: red;
}
.tabs-wrap {
  background: #ccc;
}
.scroll-tab {
  white-space: nowrap;
  border-bottom: 1rpx solid #eee;
  text-align: center;
}
.scroll-tab-item {
  display: inline-block;
  margin: 20rpx 30rpx 0 30rpx;
}
.active .scroll-tab-line {
  border-bottom: 10rpx solid red;
  color: red;
  border-radius: 20rpx;
  width: auto;
}

